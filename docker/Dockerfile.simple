# Dockerfile simples para testar o servidor
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*

# Copy application files
COPY app /app/app
COPY characters /app/characters
COPY outputs /app/outputs
COPY .env.sample /app/.env.sample

# Install minimal Python dependencies
RUN pip install --upgrade pip && \
    pip install \
    uvicorn \
    fastapi \
    python-dotenv \
    requests \
    websockets \
    aiohttp \
    numpy \
    scipy \
    pillow \
    transformers \
    openai \
    anthropic \
    pydantic \
    httpx

# Mock modules that are not essential for basic server
RUN echo "class WhisperModel: pass" > /app/mock_whisper.py && \
    echo "import sys; sys.modules['faster_whisper'] = __import__('mock_whisper')" >> /app/app/__init__.py

EXPOSE 8080

CMD ["python", "-m", "uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8080"]